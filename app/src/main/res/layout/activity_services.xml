<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="sifat.zansolution.services">


    <Button
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:text="Graphic Design"
        android:textSize="10pt"
        android:id="@+id/graphicDesign"
        android:onClick="graphic_design"
        android:textColor="@android:color/white"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@color/yellow1"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/seo"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:textColor="@android:color/white"
        android:text="SEO"
        android:textSize="20pt"
        android:scaleType="centerCrop"
        android:onClick="seo"
        android:layout_weight="1"
        android:background="@color/shark_black"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:id="@+id/socialMarketing"
        android:scaleType="centerCrop"
        android:text="Social Marketing"
        android:onClick="social_marketing"
        android:textColor="@android:color/white"
        android:textSize="20pt"
        android:layout_weight="1"
        android:background="@color/number_red"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:text="Motion Graphics"
        android:id="@+id/motionGraphics"
        android:onClick="motion_graphics"
        android:textSize="20pt"
        android:textColor="@android:color/white"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:background="@color/lucky_blue"
        android:layout_height="wrap_content" />


</LinearLayout>
