<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.AppCompat.Light"
    android:layout_gravity="center"
    android:padding="@dimen/abc_action_bar_default_padding_material"
    tools:context="sifat.zansolution.StoryFreshActivity">

    <!--output, jsonParsed, serverText-->

    <TextView
        android:layout_width="wrap_content"
        android:text="RESTFUL Webservice Call"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/output"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_height="@dimen/abc_action_bar_default_height_material" />

    <TextView
        android:id="@+id/jsonParsed"
        android:layout_below="@id/output"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material" />

    <EditText
        android:id="@+id/serverText"
        android:layout_below="@id/jsonParsed"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_getServerData"
        android:onClick="getServerData"
        android:layout_below="@id/serverText"
        android:layout_centerHorizontal="true"
        android:text="Get Server Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
