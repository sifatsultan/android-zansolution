<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sifat.zansolution"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.internet" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/zan_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        <activity
            android:name="sifat.zansolution.SplashActivity"
            android:label="@string/title_activity_services" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sifat.zansolution.StoryFragmentActivity" />
        <activity android:name="sifat.zansolution.ListItemDetailActivity" />
    </application>

</manifest>